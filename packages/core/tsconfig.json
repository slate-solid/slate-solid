{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "slate-dom-preview": ["../slate-dom-preview/src"]
    }
  },
  "references": [
    {
      "path": "../slate-dom-preview"
    }
  ]
}
